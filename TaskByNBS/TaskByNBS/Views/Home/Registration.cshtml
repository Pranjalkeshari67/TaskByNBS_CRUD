
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&display=swap" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CSS/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CSS/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CSS/custom-css.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CSS/sweetalert.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/JS/bootstrap.min.js" type="text/javascript"></script>
    <meta name="viewport" content="width=device-width" />
    <title> Registration </title>

</head>
<body>
    <div class="container-fluid">
        <div class="row">

            <div class="col-xs-12 col-sm-12 col-md-1 col-lg-1 col-xl-1"></div>

            <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10 col-xl-10">

                <div class="card-body mt-5">

                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            <h3 class="h3txtClass"> Registration Form </h3>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            @if (ViewBag.Succmsg == null)
                            {

                            }
                            else
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <strong> Success ! </strong> @ViewBag.Succmsg
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            @if (ViewBag.Errormsg == null)
                            {

                            }
                            else
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong> Alert ! </strong> @ViewBag.Errormsg
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                        </div>
                    </div>

                    <form action="javascript:void(0)" method="post" enctype="multipart/form-data" onsubmit="return onSubmitEmployeeRegForm(event, this);">
                        <div class="row mt-4">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                                <div class="form-group">
                                    <label> Employee Name </label>
                                    <i class="far fa-user fascustomUserCSS"></i>
                                    <input type="text" name="EmployeeName" value="" id="EmployeeName" class="form-control" onkeypress="return onlyAlphabets(event,this);" />
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                                <div class="form-group">
                                    <label> Salary </label>
                                    <i class="fas fa-wallet fascustomSalaryCSS"></i>
                                    <input type="text" name="EmployeeSalary" value="" id="EmployeeSalary" class="form-control" onkeypress="return isNumber(event,this);" />
                                </div>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                                <div class="form-group">
                                    <label> Date of Joining </label>
                                    <i class="fas fa-calendar-alt fascustomDOJCSS"></i>
                                    <input type="date" name="EmployeeDOJ" value="" id="EmployeeDOJ" class="form-control" />
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                                <div class="form-group">
                                    <label> Gender </label>
                                    <p class="pRadiotxt">
                                        <input type="radio" id="test1" name="EmployeeGender" class="EmployeeGender" value="Male" checked>
                                        <label for="test1">Male</label>
                                    </p>
                                    <p class="pRadiotxt">
                                        <input type="radio" id="test2" name="EmployeeGender" class="EmployeeGender" value="Female">
                                        <label for="test2">Female</label>
                                    </p>
                                    <p class="pRadiotxt">
                                        <input type="radio" id="test3" name="EmployeeGender" class="EmployeeGender" value="Transgender">
                                        <label for="test3">Transgender</label>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                                <div class="form-group">
                                    <label class="CustomFile" for="BGBannerImgg">Upload Employee Image</label>
                                    <input type="file" class="CustomizeFile" name="" id="BGBannerImgg" onchange="GetFileNameAndUpload($(this))" />
                                    <input type="hidden" name="EmployeeProfileHidden" id="EmployeeProfile" />
                                    <span id="uplodBGFile"></span>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                                        <div class="form-group">
                                            <button class="btn customBtn" type="submit" id="BtnSubmit"> Submit </button>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                                        <div class="form-group">
                                            <a href="@Url.Action("EmployeeRecords","Home")" class="customAnchorLink">
                                                <button class="btn customBtn" type="button"> Employee Records </button>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>

            </div>

            <div class="col-xs-12 col-sm-12 col-md-1 col-lg-1 col-xl-1"></div>
        </div>
    </div>
    <script src="~/Content/JS/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Content/JS/sweetalert.min.js" type="text/javascript"></script>
    <script src="~/Content/JS/custom-js.js" type="text/javascript"></script>
    <script src="~/Content/JS/validate-js.js" type="text/javascript"></script>
</body>
</html>

