
@{
    Layout = null;
}

@using TaskByNBS.Models;
@{
    List<Registration> lst_EmpList = ViewBag.empList as List<Registration>;
}

<!DOCTYPE html>

<html>
<head>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&display=swap" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CSS/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CSS/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CSS/custom-css.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CSS/sweetalert.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/JS/bootstrap.min.js" type="text/javascript"></script>
    <meta name="viewport" content="width=device-width" />
    <title> Employee Details </title>

</head>
<body>
    <div class="container-fluid">
        <div class="row">

            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">

                <div class="card-body mt-5">

                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            <h3 class="h3txtClass"> All Employee Details </h3>
                        </div>
                    </div>

                    @*<div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            @if (ViewBag.Succmsg == null)
                            {

                            }
                            else
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <strong> Success ! </strong> @ViewBag.Succmsg
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                            @if (ViewBag.Errormsg == null)
                            {

                            }
                            else
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong> Alert ! </strong> @ViewBag.Errormsg
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                        </div>
                    </div>*@

                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xl-9"></div>
                        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 col-xl-3">
                            <div class="form-group">
                                <a href="@Url.Action("Registration","Home")" class="customAnchorLink">
                                    <button class="btn customBtn" type="button"> Employee Registration </button>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mt-4">
                            <table class="table table-responsive table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th> <span> Sr No. </span> </th>
                                        <th> <span> Employee Id </span> </th>
                                        <th> <span> Employee Name </span> </th>
                                        <th> <span> Employee Salary </span> </th>
                                        <th> <span> Employee Gender </span> </th>
                                        <th> <span> Employee Date Of Joining </span> </th>
                                        <th> <span> Employee Profile </span> </th>
                                        <th> <span> Employee Added Date </span> </th>
                                        <th> <span> Edit / Update </span> </th>
                                        <th> <span> Delete </span> </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{
                                        if (lst_EmpList != null)
                                        {

                                            if (lst_EmpList.Count > 0)
                                            {
                                                int count = 1;
                                                foreach (var item in lst_EmpList)
                                                {
                                                    int cnt = count++;
                                                    <tr>
                                                        <td> <span> @cnt</span><span>.</span> </td>
                                                        <td> <span>EMP-</span><span>@item.EmployeeId</span> </td>
                                                        <td> <span> @item.EmployeeName </span> </td>
                                                        <td> <span> @item.EmployeeSalary </span> </td>
                                                        <td> <span> @item.EmployeeGender </span> </td>
                                                        <td> <span> @item.EmployeeDOJ </span> </td>
                                                        <td> <img src="~/Content/Uploaded_Images/@item.EmployeeProfile" alt="Employee Profile" height="80" width="80" /> </td>
                                                        <td> <span> @item.AddedDate </span> </td>
                                                        <td>
                                                            <a href="@Url.Action("UpdateEmployeeDetails","Home", new { empid = item.EmployeeId })" class="customAnchorLink">
                                                                <button class="btnAction">
                                                                    <i class="far fa-edit" title="Edit/Update"></i>
                                                                </button>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <button class="btnAction" onclick="return onClickDelete(event, this);" data-emid="@item.EmployeeId">
                                                                <i class="far fa-trash-alt" title="Delete"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr> <td colspan="11"> <span> Data not available. </span> </td> </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr> <td colspan="11"> <span> Data not available. </span> </td> </tr>
                                        }
                                    }

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
    <script src="~/Content/JS/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Content/JS/sweetalert.min.js" type="text/javascript"></script>
    <script src="~/Content/JS/custom-js.js" type="text/javascript"></script>
    <script src="~/Content/JS/validate-js.js" type="text/javascript"></script>
</body>
</html>

